<div class="overflow-x-auto min-h-[100vh]" id="table">
    <div class="flex items-baseline mt-2">
        <p class="mt-8 mr-2"> <%= it.rangeMessage %></p>
        <% /* the button below has style="animation: none;" to prevent */ %>
        <% /* bouncing with every http request */ %>
        <button
                class="btn btn-secondary btn-xs mb-4"
                onclick="tableData.clearFilters()"
                style="animation: none;"
        >Clear filters
        </button>
    </div>
    <table class="table user-table border-solid border-2">
        <thead>
        <tr>
            <th>Avatar</th>
            <th>
                <% ~ include('./tableHead.eta', { label: 'First Name', field: 'firstName', limit: it.count, offset: it.offset, sortDir: it.sortDir, sortField: it.sortField, searchField: it.searchField, searchTerm: it.searchTerm }) %>
            </th>
            <th>
                <div class="th-container">
                    <% ~ include('./tableHead.eta', { label: 'Last Name', field: 'lastName', limit: it.count, offset: it.offset, sortDir: it.sortDir, sortField: it.sortField, searchField: it.searchField, searchTerm: it.searchTerm }) %>
                </div>
            </th>
            <th>
                <div class="th-container">
                    <% ~ include('./tableHead.eta', { label: 'Email', field: 'email', limit: it.count, offset: it.offset, sortDir: it.sortDir, sortField: it.sortField, searchField: it.searchField, searchTerm: it.searchTerm }) %>
                </div>
            </th>
            <th>
                <div class="th-container">
                    <% ~ include('./tableHead.eta', { label: 'Phone', field: 'phoneNumber', limit: it.count, offset: it.offset, sortDir: it.sortDir, sortField: it.sortField, searchField: it.searchField, searchTerm: it.searchTerm }) %>
                </div>
            </th>
        </tr>
        </thead>
        <tbody class="fade-in">
        <% it.records.forEach(function(user){ %>
        <% ~ include('./userRow.eta', { user }) %>
        <% }) %>
        </tbody>
    </table>
    <div class="flex justify-center">
        <lit-pagination
                sortDir="<%= it.sortDir %>"
                sortField="<%= it.sortField %>"
                searchTerm="<%= it.searchTerm %>"
                searchField="<%= it.searchField %>"
                total=<%= it.total %>
                limit=<%= it.count %>
                offset=<%= it.offset %>
                page=<%= (it.offset + 20) / it.count %>
                size=2>
        </lit-pagination>
    </div>
</div>
