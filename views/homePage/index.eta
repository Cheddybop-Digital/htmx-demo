<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>HTMX Demo</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <link href="/styles/tailwind.css" rel="stylesheet">
    <link href="/styles/style.css" rel="stylesheet">
    <link href="/styles/global-styles.css" rel="stylesheet">
    <link href="/styles/table.css" rel="stylesheet">
    <script defer src="/scripts/homePageTableData.js"></script>
    <script defer src="/scripts/userFormEventHandlers.js"></script>
    <script type="module" src="/scripts/lit-pagination.js"></script>
</head>
<body class="relative overflow-x-hidden">
<% if ( it.message ) { %>
    <% ~include("./partials/toast.eta", it); %>
<% } %>
<main class="my-8 p-8 mx-auto">

    <button class="btn btn-primary"
            style="animation: none;"
            onclick="user_create_modal.showModal()">
        Add User!
    </button>

    <% ~include("./partials/tableAndPagination.eta", it); %>

    <% ~include("../modals/userModal.eta", { type: "create" }); %>
</main>
</body>
</html>